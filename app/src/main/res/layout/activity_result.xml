<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".UI.scanAnimal.result.ResultActivity">

    <ImageView
        android:id="@+id/iv_satwa"
        android:layout_width="260dp"
        android:layout_height="285dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_satwa_name_title"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/komodo_image_example" />

    <TextView
        android:id="@+id/kenali_satw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|top"
        android:text="@string/kenali_satw"
        android:textAppearance="@style/kenali_satwa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_satwa_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|top"
        android:text="@string/nama_satwa"
        android:textAppearance="@style/nama_satwa"
        app:layout_constraintEnd_toEndOf="@+id/kenali_satw"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/kenali_satw"
        app:layout_constraintTop_toBottomOf="@+id/kenali_satw" />

    <TextView
        android:id="@+id/nama_latin_satwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|top"
        android:text="@string/nama_latin_satwa"
        android:textAppearance="@style/nama_satwa_description"
        app:layout_constraintEnd_toEndOf="@+id/iv_satwa"
        app:layout_constraintStart_toStartOf="@+id/iv_satwa"
        app:layout_constraintTop_toBottomOf="@+id/iv_satwa" />

    <TextView
        android:id="@+id/lokasi_satwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|top"
        android:text="@string/lokasi_satwa"
        android:textAppearance="@style/nama_satwa_description"
        app:layout_constraintEnd_toEndOf="@+id/nama_latin_satwa"
        app:layout_constraintStart_toStartOf="@+id/nama_latin_satwa"
        app:layout_constraintTop_toBottomOf="@+id/nama_latin_satwa" />

    <TextView
        android:id="@+id/populasi_satwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|top"
        android:text="@string/populasi_satwa"
        android:textAppearance="@style/nama_satwa_description"
        app:layout_constraintEnd_toEndOf="@+id/lokasi_satwa"
        app:layout_constraintStart_toStartOf="@+id/lokasi_satwa"
        app:layout_constraintTop_toBottomOf="@+id/lokasi_satwa" />

    <TextView
        android:id="@+id/funfact_satwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|top"
        android:text="@string/funfact_satwa"
        android:textAppearance="@style/nama_satwa_description"
        app:layout_constraintEnd_toEndOf="@+id/populasi_satwa"
        app:layout_constraintStart_toStartOf="@+id/populasi_satwa"
        app:layout_constraintTop_toBottomOf="@+id/populasi_satwa" />

    <Button
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/main_color"
        android:text="@string/home"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.414"
        tools:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/main_color"
        android:text="@string/donasi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>